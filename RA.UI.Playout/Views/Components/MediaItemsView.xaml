    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<xctk:WatermarkTextBox x:Name="searchWatermarkTextbox"
                                   Margin="0,0,0,5"
                                   Watermark="Search..."
                               Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                               KeyDown="searchWatermarkTextbox_KeyDown"
                                   />-->

        <syncfusion:SfDataGrid Grid.Row="1" ItemsSource="{Binding Items}" SelectionMode="Single"
                               SelectedItem="{Binding SelectedTrack}" AutoGenerateColumns="False"
                               AllowSorting="False" ColumnSizer="AutoLastColumnFill"
                               >
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridTextColumn HeaderText="Artists" HorizontalHeaderContentAlignment="Left"
                                           MappingName="Artists"/>
                <syncfusion:GridTextColumn HeaderText="Title" HorizontalHeaderContentAlignment="Left"
                                           MappingName="Title"/>
                <syncfusion:GridTextColumn HeaderText="Type" MinimumWidth="60"
                                           MappingName="Type"/>
                <syncfusion:GridTextColumn HeaderText="Duration" MinimumWidth="60"
                                           MappingName="Duration"
                                           DisplayBinding="{Binding Path=Duration, Converter={StaticResource DoubleToTimeSpanConverter}, StringFormat={}{0:hh\\:mm\\:ss}}"/>
                <syncfusion:GridTextColumn HeaderText="Year" MinimumWidth="50" Width="50"
                                           DisplayBinding="{Binding Path=ReleaseDate, StringFormat=yyyy}"/>
            </syncfusion:SfDataGrid.Columns>
            
        </syncfusion:SfDataGrid>
        <Grid Grid.Row="2" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <syncfusion:ButtonAdv Width="160" 
                                  SmallIcon="{StaticResource PlusIcon}"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                Command="{Binding MainVm.AddItemToPlaylistBottomCommand}"
                                  Label="Add to playlist bottom">
            </syncfusion:ButtonAdv>


            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Padding" Value="5"/>
                    </Style>
                </StackPanel.Resources>
                <syncfusion:ButtonAdv SmallIcon="{StaticResource BackIcon}" Margin="0,0,5,0"
                                      Label="Previous"
                    Command="{Binding PreviousPageCommand}"/>
                <syncfusion:ButtonAdv SmallIcon="{StaticResource ForwardIcon}"
                    Label="Next" FlowDirection="RightToLeft"
                    Command="{Binding NextPageCommand}"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
