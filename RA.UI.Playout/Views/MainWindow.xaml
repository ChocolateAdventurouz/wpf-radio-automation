<uicore:RAWindow x:Class="RA.UI.Playout.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uicore="clr-namespace:RA.UI.Core;assembly=RA.UI.Core"
        xmlns:component="clr-namespace:RA.UI.Playout.Views.Components"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="700" MinWidth="1400"
                    
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#222" Padding="10" Height="200">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Width="60" Margin="0,5,5,0" Orientation="Vertical">
                    <syncfusion:ButtonAdv Label="Next" SizeMode="Large" Height="150" IconWidth="48" IconHeight="48"
                                          LargeIcon="{StaticResource EjectIcon}"/>
                    <Button Content="Fade next" Margin="0,5,0,0" Height="24"/>
                </StackPanel>

                <!-- Column 1 : Current playing details -->
                <component:NowPlayingView Grid.Column="1"
                                              DataContext="{Binding NowPlayingVm}"/>


                <Grid Grid.Column="2" Margin="10,0,10,0" VerticalAlignment="Center" Height="150">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <!--<syncfusion:ButtonAdv Grid.Column="0" SizeMode="Large" Margin="0,0,5,0" Width="60" IconStretch="Fill">
                        <syncfusion:ButtonAdv.Style>
                            <Style TargetType="syncfusion:ButtonAdv" BasedOn="{StaticResource {x:Type syncfusion:ButtonAdv}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding NowPlayingVm.IsItemLoaded}" Value="False">
                                        <Setter Property="Label" Value="Play"/>
                                        <Setter Property="LargeIcon" Value="{StaticResource PlayIcon}"/>
                                        <Setter Property="Command" Value="{Binding PlaylistVm.PlayCommand}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding NowPlayingVm.IsItemLoaded}" Value="True">
                                        <Setter Property="Label" Value="Pause"/>
                                        <Setter Property="LargeIcon" Value="{StaticResource PauseIcon}"/>
                                        <Setter Property="Command" Value="{Binding PlaylistVm.PauseCommand}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding NowPlayingVm.IsPaused}" Value="True">
                                        <Setter Property="Label" Value="Resume"/>
                                        <Setter Property="LargeIcon" Value="{StaticResource ResumeIcon}"/>
                                        <Setter Property="Command" Value="{Binding PlaylistVm.ResumeCommand}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </syncfusion:ButtonAdv.Style>
                    </syncfusion:ButtonAdv>-->

                    <syncfusion:ButtonAdv Grid.Column="0" SizeMode="Large"  Margin="0,0,5,0" Width="60" IsCheckable="True"
                                          IsChecked="{Binding PlaylistVm.IsLooping}" IconWidth="32" IconHeight="60"
                                          LargeIcon="{StaticResource LoopIcon}" IconStretch="None"/>

                    <syncfusion:ButtonAdv Grid.Column="1" SizeMode="Large" Margin="0,0,5,0" Width="60" IsCheckable="True"
                                            IconWidth="40" IconHeight="60"
                                          LargeIcon="{StaticResource PauseIcon}"/>
                    <syncfusion:ButtonAdv Grid.Column="2" SizeMode="Large" Label="Restart" Margin="0,0,5,0" Width="60" IsCheckable="True"
                                            IconWidth="29" IconHeight="60"
                                          LargeIcon="{StaticResource ReplayIcon}"/>

                </Grid>

                <!-- Column 2 : Time -->
                <component:CurrentTimeView Grid.Column="3"/>

            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="700"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*" MinWidth="700"/>
            </Grid.ColumnDefinitions>

            <!-- Playlist -->
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <component:PlaylistView Grid.Column="0"
                                        DataContext="{Binding PlaylistVm}"/>
            </Grid>
        </Grid>
    </Grid>
</uicore:RAWindow>
